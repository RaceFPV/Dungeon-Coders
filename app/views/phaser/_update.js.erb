Dude.prototype.update = function() {
        if (this.currentSpeed > 0)
        {
            this.currentSpeed -= 7;
        }
        // check if player is standing on teleporter 1
        if (teleportplayer1(this.dude)) {
          this.dude.body.x = 2690;
          this.dude.body.y = 225;
        }
        // check if player is standing on teleporter 1 home
        if (teleportplayer1home(this.dude)) {
          this.dude.body.x = 300;
          this.dude.body.y = 300;
        }
        // check if player is standing on teleporter 2
        if (teleportplayer2(this.dude)) {
          this.dude.body.x = 7045;
          this.dude.body.y = 1475;
        }
        // check if player is standing on teleporter 2 home
        if (teleportplayer2home(this.dude)) {
          this.dude.body.x = 300;
          this.dude.body.y = 300;
        }
        this.dude.body.velocity.x = 0;
        this.dude.body.velocity.y = 0;
};

